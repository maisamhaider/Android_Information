<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:orientation="vertical"
    android:weightSum="2"
    tools:context="com.dragster.android.information.system.my.android.activities.CameraInfo">

    <LinearLayout
        android:background="@color/colorRed"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/poppins_bold"
                android:textSize="20sp"
                android:id="@+id/cameraInfo_tv1"
                android:text="CAMERA INFORMATION"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/cameraInfo_tv1"
                android:layout_alignTop="@+id/cameraInfo_tv1"
                android:layout_alignBottom="@+id/cameraInfo_tv1"
                android:layout_marginStart="2dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="1dp"
                android:src="@drawable/ic_camera_info_font" />

        </RelativeLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:weightSum="3"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
            android:gravity="center"
            android:layout_weight="2"
            android:orientation="vertical"
            android:layout_width="wrap_content"
             android:layout_height="match_parent">
            <ImageView
                  android:src="@drawable/ic_front_camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                 android:textColor="@color/colorWhite"
                android:fontFamily="@font/poppins_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Front"
                android:textSize="20sp" />
            <TextView
                 android:fontFamily="@font/poppins_medium"
                android:textColor="@color/colorWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Camera"
                 />

        </LinearLayout>
            <LinearLayout
                android:layout_marginEnd="5dp"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="50sp"
                    android:text="8"
                    android:id="@+id/cameraPixel_Tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:fontFamily="@font/poppins_regular"/>

                <TextView
                     android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/colorWhite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Megapixel" />
                <TextView
                    android:gravity="center"
                    android:textColor="@color/colorWhite"
                     android:text="Remaining pictures"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:gravity="center"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/colorWhite"
                    android:id="@+id/frontCameraRemainingPics_Tv"
                     android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>



     </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:weightSum="3"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/ic_back_camera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="@color/colorBlueWhale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="back"
                    android:textSize="20sp" />
                <TextView
                    android:textColor="@color/colorSilver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Camera"
                    android:fontFamily="@font/poppins_medium"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:gravity="center"
                  android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/colorBlueWhale"
                android:fontFamily="@font/poppins_regular"
                android:id="@+id/backCameraPixel_Tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16"
                android:textSize="50sp" />
                <TextView
                    android:textColor="@color/colorSilver"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Megapixel" />
                <TextView
                    android:gravity="center"
                    android:textColor="@color/colorBlueWhale"
                     android:text="Remaining pictures"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:gravity="center"
                    android:textColor="@color/colorSilver"
                    android:fontFamily="@font/poppins_regular"
                    android:id="@+id/backCameraRemainingPics_Tv"
                     android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <com.google.android.gms.ads.AdView
        android:id="@+id/activityCameraInfo_adv"
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>